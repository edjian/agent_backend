					column="{spuId=id}">
		</collection>
		<collection property="freightTemplat" ofType="com.aiforest.cloud.mall.common.entity.FreightTemplat"
					select="com.aiforest.cloud.mall.admin.mapper.FreightTemplatMapper.selectById"
					column="{id=freight_templat_id}">
		</collection>
		<collection property="deliveryPlace" ofType="com.aiforest.cloud.mall.common.entity.DeliveryPlace"
					select="com.aiforest.cloud.mall.admin.mapper.DeliveryPlaceMapper.selectById"
					column="{id=delivery_place_id}">
		</collection>
		<collection property="ensureIds" ofType="java.lang.String"
					select="com.aiforest.cloud.mall.admin.mapper.EnsureGoodsMapper.listEnsureIdsBySpuId" column="id">
		</collection>
	</resultMap>

	<resultMap id="goodsSpuMap2" extends="goodsSpuMap" type="com.aiforest.cloud.mall.common.entity.GoodsSpu">
		<collection property="skus" ofType="com.aiforest.cloud.mall.common.entity.GoodsSku"
					select="com.aiforest.cloud.mall.admin.mapper.GoodsSkuMapper.listGoodsSkuBySpuId"
